{
  "appName": "PECTOP",
  "globalStyles": {
    "componentLibrary": "Shadcn/ui",
    "cssFramework": "Tailwind CSS",
    "primaryColor": "#a61612",
    "themeSupport": ["light", "dark"]
  },
  "pwaConfig": {
    "short_name": "PECTOP",
    "name": "PECTOP (PEC Tracking Online Portal)",
    "description": "Student Mentoring Application for PEC",
    "start_url": "/",
    "display": "standalone",
    "background_color": "#ffffff",
    "theme_color": "#a61612",
    "icons": [
      {
        "src": "/icons/icon-72x72.png",
        "sizes": "72x72",
        "type": "image/png"
      },
      {
        "src": "/icons/icon-96x96.png",
        "sizes": "96x96",
        "type": "image/png"
      },
      {
        "src": "/icons/icon-128x128.png",
        "sizes": "128x128",
        "type": "image/png"
      },
      {
        "src": "/icons/icon-144x144.png",
        "sizes": "144x144",
        "type": "image/png"
      },
      {
        "src": "/icons/icon-192x192.png",
        "sizes": "192x192",
        "type": "image/png"
      },
      {
        "src": "/icons/icon-512x512.png",
        "sizes": "512x512",
        "type": "image/png",
        "purpose": "any maskable"
      }
    ],
    "splashScreen": {
      "backgroundColor": "#1a202c",
      "iconSrc": "/icons/splash-icon.png",
      "text": "PECTOP"
    }
  },
  "commonLayout": {
    "description": "A consistent master layout for all authenticated users, including a persistent Header and a collapsible Sidebar.",
    "header": {
      "componentType": "Header",
      "description": "A sticky header bar at the top of the viewport.",
      "children": [
        {
          "componentType": "Static",
          "description": "Application Logo and Name",
          "properties": {
            "logoUrl": "/assets/pec_logo.png",
            "text": "PECTOP",
            "position": "left"
          }
        },
        {
          "componentType": "DropdownMenu",
          "trigger": {
            "componentType": "Avatar",
            "description": "User Avatar"
          },
          "properties": {
            "position": "right"
          },
          "children": [
            {
              "componentType": "DropdownMenuItem",
              "properties": {
                "interactive": false,
                "text": "Displays user's Full Name and Role"
              }
            },
            {
              "componentType": "DropdownMenuSeparator"
            },
            {
              "componentType": "DropdownMenuItem",
              "properties": {
                "text": "Logout",
                "action": "logoutAndRedirect",
                "target": "/"
              }
            }
          ]
        }
      ],
      "responsiveBehavior": {
        "desktop": "Displays full application name, logo, and user avatar.",
        "tablet": "Similar to desktop, name may be truncated on smaller sizes.",
        "mobile": "Application name is hidden or shortened. A 'hamburger' menu icon appears on the far left to toggle the sidebar."
      }
    },
    "sidebar": {
      "componentType": "Sidebar",
      "description": "A collapsible navigation sidebar with dynamic links based on user role.",
      "children": [
        {
          "componentType": "NavigationMenu",
          "properties": {
            "orientation": "vertical",
            "links": {
              "Administrator": ["Dashboard", "User Management", "Student Management", "Mentor Assignment", "Academic Management"],
              "HOD": ["Dashboard", "Department Students", "Mentor Activities", "Reports"],
              "Mentor": ["Dashboard", "My Profile"],
              "Student": [
                "My Profile",
                "Faculty Contacts"
              ],
              "Parent": [
                "My Profile",
                "Faculty Contacts"
              ]
            }
          }
        }
      ],
      "responsiveBehavior": {
        "desktop": "Visible by default in expanded state, with a toggle to collapse to icon-only view.",
        "tablet_landscape": "Behaves like desktop, likely starting collapsed.",
        "tablet_portrait_mobile": "Hidden by default. Appears as an overlay sliding from the left, triggered by the 'hamburger' icon."
      }
    }
  },
  "responsivePatterns": {
    "patternA": {
      "name": "Standard Data Table to Card List",
      "useCase": "Displaying lists of items like users, students, etc.",
      "desktop": "Renders as a standard Table with multiple columns and rows.",
      "mobile": "Transforms into a vertical list of Card components. Each card represents a row, displaying data as Label-value pairs."
    },
    "patternB": {
      "name": "Two-Column Form Table to Card List",
      "useCase": "Simple input tables with a label and a single input/control per row.",
      "desktop": "Renders as a two-column Table (Label, Input).",
      "mobile": "Transforms into a list of Cards. Each card has a CardTitle (the label) and the input control placed vertically below it."
    },
    "patternC": {
      "name": "Multi-Column Form Table to Card List",
      "useCase": "Complex tables with multiple dynamic columns (e.g., ratings per subject).",
      "desktop": "Renders as a full multi-column Table.",
      "mobile": "Transforms into a list of Cards, where each card represents one row metric. Inside, a vertical list displays each column header paired with its input control."
    }
  },
  "pages": [
    {
      "name": "Role Selection Page",
      "path": "/",
      "description": "Initial landing page for role selection. If a user is already logged in, they should be automatically redirected to their respective dashboard.",
      "components": [
        {
          "componentType": "WelcomeHeader",
          "properties": {
            "title": "Welcome to PECTOP",
            "subtitle": "PEC Tracking Online Portal"
          },
          "description": "A prominent welcome message at the top of the page."
        },
        {
          "componentType": "Grid",
          "children": [
            {
              "componentType": "Card",
              "properties": {
                "title": "Student Login",
                "navigationTarget": "/login/student"
              }
            },
            {
              "componentType": "Card",
              "properties": {
                "title": "Parent Login",
                "navigationTarget": "/login/parent"
              }
            },
            {
              "componentType": "Card",
              "properties": {
                "title": "Faculty Login",
                "navigationTarget": "/login/faculty"
              }
            },
            {
              "componentType": "Card",
              "properties": {
                "title": "HoD Login",
                "navigationTarget": "/login/faculty"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Login Page",
      "path": "/login/:role",
      "description": "A centered card for user authentication.",
      "components": [
        {
          "componentType": "Card",
          "children": [
            {
              "componentType": "CardHeader",
              "properties": {
                "title": "Dynamic based on role (e.g., 'Student Login')"
              }
            },
            {
              "componentType": "CardContent",
              "children": [
                {
                  "componentType": "Input",
                  "properties": {
                    "label": "Username / Register Number"
                  }
                },
                {
                  "componentType": "Input",
                  "properties": {
                    "label": "Password",
                    "type": "password"
                  }
                }
              ]
            },
            {
              "componentType": "CardFooter",
              "children": [
                {
                  "componentType": "Button",
                  "properties": {
                    "text": "Login"
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "roles": {
    "administrator": {
      "name": "Administrator",
      "ui": [
        {
          "name": "Admin Dashboard",
          "path": "/admin/dashboard",
          "description": "High-level overview and navigation.",
          "components": [
            {
              "componentType": "Grid",
              "children": [
                {
                  "componentType": "Card",
                  "properties": {
                    "title": "Total Students",
                    "metric": "COUNT(students)"
                  }
                },
                {
                  "componentType": "Card",
                  "properties": {
                    "title": "Total Mentors",
                    "metric": "COUNT(users WHERE role='Mentor')"
                  }
                },
                {
                  "componentType": "Card",
                  "properties": {
                    "title": "Total HODs",
                    "metric": "COUNT(users WHERE role='HOD')"
                  }
                }
              ]
            },
            {
              "componentType": "Card",
              "properties": {
                "title": "Quick Actions"
              },
              "children": [
                {
                  "componentType": "Button",
                  "properties": {
                    "text": "Create New User"
                  }
                },
                {
                  "componentType": "Button",
                  "properties": {
                    "text": "Create Student Profile"
                  }
                }
              ]
            }
          ]
        },
        {
          "name": "User Management Page",
          "path": "/admin/users",
          "description": "Manage all non-student user accounts.",
          "components": [
            {
              "componentType": "Button",
              "properties": {
                "text": "Create New User",
                "action": "openDialog",
                "target": "createUserDialog"
              }
            },
            {
              "componentType": "Table",
              "responsiveBehavior": "patternA",
              "properties": {
                "columns": [
                  "Full Name",
                  "Username",
                  "Role",
                  "Department",
                  "Actions"
                ],
                "actions": [
                  {
                    "name": "Edit",
                    "action": "openDialog",
                    "target": "createUserDialog",
                    "mode": "edit"
                  },
                  {
                    "name": "Deactivate",
                    "action": "deactivateUser"
                  }
                ]
              }
            },
            {
              "componentType": "Dialog",
              "id": "createUserDialog",
              "properties": {
                "title": {
                  "create": "Create New User",
                  "edit": "Edit User: ${userName}"
                },
                "description": "Fill in the details below to create or update a user account."
              },
              "children": [
                {
                  "componentType": "Input",
                  "properties": {
                    "label": "Full Name"
                  }
                },
                {
                  "componentType": "Input",
                  "properties": {
                    "label": "Username",
                    "disabledOnEdit": true
                  }
                },
                {
                  "componentType": "Input",
                  "properties": {
                    "label": "Password",
                    "type": "password",
                    "helperText": "Leave blank if not changing."
                  }
                },
                {
                  "componentType": "Select",
                  "properties": {
                    "label": "Role",
                    "options": [
                      "Administrator",
                      "HOD",
                      "Mentor"
                    ]
                  }
                },
                {
                  "componentType": "Select",
                  "properties": {
                    "label": "Department",
                    "optionsSource": "api/departments",
                    "requiredIfRole": [
                      "HOD",
                      "Mentor"
                    ]
                  }
                }
              ],
              "footer": [
                {
                  "componentType": "Button",
                  "properties": {
                    "text": "Cancel",
                    "variant": "outline"
                  }
                },
                {
                  "componentType": "Button",
                  "properties": {
                    "text": "Save"
                  }
                }
              ]
            }
          ]
        },
        {
          "name": "Student Management Page",
          "path": "/admin/students",
          "description": "Create and manage student profiles and mentor assignments.",
          "components": [
            {
              "componentType": "ActionBar",
              "children": [
                {
                  "componentType": "Button",
                  "properties": {
                    "text": "Create Student Profile",
                    "action": "openDialog",
                    "target": "createStudentDialog"
                  }
                },
                {
                  "componentType": "Button",
                  "properties": {
                    "text": "Bulk Edit Mentor Assignment",
                    "disabled": "by default, active when students are selected"
                  }
                }
              ]
            },
            {
              "componentType": "Table",
              "responsiveBehavior": "patternA",
              "properties": {
                "columns": [
                  "Checkbox",
                  "Name",
                  "Register Number",
                  "Program",
                  "Batch",
                  "Assigned Mentor",
                  "Actions"
                ],
                "features": [
                  "search",
                  "filter",
                  "pagination",
                  "bulk-select"
                ],
                "actions": [
                  {
                    "name": "Edit Mentor Assignment",
                    "action": "openDialog",
                    "target": "editMentorDialog"
                  },
                  {
                    "name": "View Full Profile",
                    "action": "navigate",
                    "target": "/mentor/student/${studentId}"
                  }
                ]
              }
            }
          ]
        },
        {
          "name": "Mentor Assignment Page",
          "path": "/admin/mentor-assignment",
          "description": "Bulk assign unassigned students to a mentor.",
          "layout": "two-panel",
          "components": [
            {
              "panel": "left",
              "componentType": "Card",
              "properties": {
                "title": "Unassigned Students"
              },
              "children": [
                {
                  "componentType": "Table",
                  "responsiveBehavior": "patternA",
                  "properties": {
                    "columns": [
                      "Checkbox",
                      "Name",
                      "Register Number"
                    ],
                    "features": [
                      "bulk-select"
                    ]
                  }
                }
              ]
            },
            {
              "panel": "right",
              "componentType": "Card",
              "children": [
                {
                  "componentType": "Select",
                  "properties": {
                    "label": "Choose a Mentor",
                    "optionsSource": "api/mentors"
                  }
                },
                {
                  "componentType": "Button",
                  "properties": {
                    "text": "Assign Selected Students"
                  }
                }
              ]
            }
          ]
        },
        {
          "name": "Academic Management Page",
          "path": "/admin/academic-management",
          "description": "Manage Programs and Branches.",
          "components": [
            {
              "componentType": "Tabs",
              "tabs": [
                {
                  "title": "Programs",
                  "content": [
                    {
                      "componentType": "Button",
                      "properties": {
                        "text": "Create Program"
                      }
                    },
                    {
                      "componentType": "Table",
                      "responsiveBehavior": "patternA",
                      "properties": {
                        "columns": [
                          "Program Name",
                          "Duration (years)",
                          "Actions"
                        ],
                        "actions": [
                          "Edit",
                          "Delete"
                        ]
                      }
                    }
                  ]
                },
                {
                  "title": "Branches",
                  "content": [
                    {
                      "componentType": "Button",
                      "properties": {
                        "text": "Create Branch"
                      }
                    },
                    {
                      "componentType": "Table",
                      "responsiveBehavior": "patternA",
                      "properties": {
                        "columns": [
                          "Branch Name",
                          "Associated Program",
                          "Actions"
                        ],
                        "actions": [
                          "Edit",
                          "Delete"
                        ]
                      }
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    },
    "hod": {
      "name": "Head of Department",
      "ui": [
        {
          "name": "HOD Dashboard",
          "path": "/faculty/dashboard",
          "description": "Overview of department students and mentors.",
          "components": [
            {
              "componentType": "Grid",
              "children": [
                {
                  "componentType": "Card",
                  "properties": {
                    "title": "Total Students in Department",
                    "metric": "COUNT(students WHERE department=HOD.department)"
                  }
                },
                {
                  "componentType": "Card",
                  "properties": {
                    "title": "Total Mentors in Department",
                    "metric": "COUNT(users WHERE role='Mentor' AND department=HOD.department)"
                  }
                }
              ]
            },
            {
              "componentType": "Card",
              "properties": {
                "title": "Quick Actions"
              },
              "children": [
                {
                  "componentType": "Button",
                  "properties": {
                    "text": "View Department Students",
                    "action": "navigate",
                    "target": "/faculty/students"
                  }
                },
                {
                  "componentType": "Button",
                  "properties": {
                    "text": "View Mentor Activities",
                    "action": "navigate",
                    "target": "/faculty/mentor-activities"
                  }
                }
              ]
            }
          ]
        },
        {
          "name": "Department Students Page",
          "path": "/faculty/students",
          "description": "View and manage students within the HOD's department.",
          "components": [
            {
              "componentType": "Table",
              "responsiveBehavior": "patternA",
              "properties": {
                "columns": ["Register Number", "Name", "Program", "Batch", "Assigned Mentor", "Actions"],
                "features": ["search", "filter", "pagination"],
                "actions": [
                  {
                    "name": "View Full Profile",
                    "action": "navigate",
                    "target": "/faculty/student/${studentId}"
                  }
                ]
              }
            }
          ]
        },
        {
          "name": "Mentor Activities Page",
          "path": "/faculty/mentor-activities",
          "description": "Overview of mentoring activities by mentors in the department.",
          "components": [
            {
              "componentType": "Table",
              "responsiveBehavior": "patternA",
              "properties": {
                "columns": ["Mentor Name", "Total Mentees", "Completed Sessions", "Pending Reviews", "Actions"],
                "features": ["search", "filter", "pagination"],
                "actions": [
                  {
                    "name": "View Mentor's Mentees",
                    "action": "navigate",
                    "target": "/faculty/mentor/${mentorId}/mentees"
                  }
                ]
              }
            }
          ]
        },
        {
          "name": "Department Reports Page",
          "path": "/faculty/reports",
          "description": "Generate various departmental reports.",
          "components": [
            {
              "componentType": "Card",
              "properties": { "title": "Generate Reports" },
              "children": [
                { "componentType": "Select", "properties": { "label": "Report Type", "options": ["Student Progress", "Mentor Activity Summary", "Academic Performance"] } },
                { "componentType": "Button", "properties": { "text": "Generate Report" } }
              ]
            }
          ]
        }
      ]
    },
    "mentor": {
      "name": "Mentor",
      "ui": [
        {
          "name": "Mentor Dashboard",
          "path": "/faculty/dashboard",
          "description": "Landing page showing the list of assigned mentees.",
          "components": [
            {
              "componentType": "Card",
              "properties": {
                "title": "My Mentees"
              },
              "children": [
                {
                  "componentType": "Table",
                  "responsiveBehavior": "patternA",
                  "properties": {
                    "columns": [
                      "Register Number",
                      "Name",
                      "Current Academic Year",
                      "Section"
                    ],
                    "features": [
                      "search"
                    ],
                    "rowInteraction": "clickable",
                    "navigationTarget": "/faculty/student/${studentId}"
                  }
                }
              ]
            }
          ]
        },
        {
          "name": "Student Profile Page",
          "path": "/faculty/student/:studentId",
          "description": "Main workspace for a mentor to view and update a specific student's data.",
          "components": [
            {
              "componentType": "PageHeader",
              "properties": {
                "leftContent": [
                  "Student's Name",
                  "Register Number",
                  "Current Academic Year",
                  "Section"
                ],
                "rightContent": "Student's Profile Picture"
              }
            },
            {
              "componentType": "Tabs",
              "tabs": [
                {
                  "title": "General Profile",
                  "content": [
                    {
                      "componentType": "Card",
                      "properties": {
                        "title": "Personal & Contact Details",
                        "features": [
                          "edit-mode-toggle"
                        ]
                      },
                      "readOnlyView": {
                        "layout": "two-column-grid",
                        "fields": [
                          "Date of Birth",
                          "Sex",
                          "Community",
                          "Nationality",
                          "Religion",
                          "Caste",
                          "Contact Numbers",
                          "Email",
                          "Blood Group",
                          "State",
                          "Mother Tongue"
                        ]
                      },
                      "editModeView": {
                        "componentType": "Form",
                        "fields": [
                          {
                            "name": "dateOfBirth",
                            "label": "Date of Birth",
                            "component": "DatePicker"
                          },
                          {
                            "name": "sex",
                            "label": "Sex",
                            "component": "Select",
                            "options": ["Male", "Female", "Other"]
                          },
                          {
                            "name": "community",
                            "label": "Community",
                            "component": "Input",
                            "type": "text"
                          },
                          {
                            "name": "nationality",
                            "label": "Nationality",
                            "component": "Input",
                            "type": "text"
                          },
                          {
                            "name": "religion",
                            "label": "Religion",
                            "component": "Input",
                            "type": "text"
                          },
                          {
                            "name": "caste",
                            "label": "Caste",
                            "component": "Input",
                            "type": "text"
                          },
                          {
                            "name": "mobileNumber",
                            "label": "Mobile Number",
                            "component": "Input",
                            "type": "tel"
                          },
                          {
                            "name": "email",
                            "label": "Email",
                            "component": "Input",
                            "type": "email"
                          },
                          {
                            "name": "bloodGroup",
                            "label": "Blood Group",
                            "component": "Select",
                            "options": ["A+", "A-", "B+", "B-", "AB+", "AB-", "O+", "O-"]
                          },
                          {
                            "name": "state",
                            "label": "State",
                            "component": "Select",
                            "options": [
                              "Andhra Pradesh",
                              "Arunachal Pradesh",
                              "Assam",
                              "Bihar",
                              "Chhattisgarh",
                              "Goa",
                              "Gujarat",
                              "Haryana",
                              "Himachal Pradesh",
                              "Jharkhand",
                              "Karnataka",
                              "Kerala",
                              "Madhya Pradesh",
                              "Maharashtra",
                              "Manipur",
                              "Meghalaya",
                              "Mizoram",
                              "Nagaland",
                              "Odisha",
                              "Punjab",
                              "Rajasthan",
                              "Sikkim",
                              "Tamil Nadu",
                              "Telangana",
                              "Tripura",
                              "Uttar Pradesh",
                              "Uttarakhand",
                              "West Bengal",
                              "Andaman and Nicobar Islands",
                              "Chandigarh",
                              "Dadra and Nagar Haveli and Daman and Diu",
                              "Delhi",
                              "Jammu and Kashmir",
                              "Ladakh",
                              "Lakshadweep",
                              "Puducherry"
                            ]
                          },
                          {
                            "name": "motherTongue",
                            "label": "Mother Tongue",
                            "component": "Input",
                            "type": "text"
                          }
                        ]
                      }
                    },
                    {
                      "componentType": "Card",
                      "properties": {
                        "title": "Family Details",
                        "features": [
                          "edit-mode-toggle"
                        ]
                      },
                      "readOnlyView": {
                        "layout": "two-column-grid",
                        "fields": [
                          "Father's Name",
                          "Father's Occupation",
                          "Father's Educational Level",
                          "Mother's Name",
                          "Mother's Occupation",
                          "Mother's Educational Level",
                          "Parent's Contact (Landline)",
                          "Parent's Contact (Mobile)", "Parent's Email",
                          "Siblings"
                        ]
                      },
                      "editModeView": {
                        "componentType": "Form",
                        "fields": [
                          {
                            "name": "fatherName",
                            "label": "Father's Name",
                            "component": "Input",
                            "type": "text"
                          },
                          {
                            "name": "fatherOccupation",
                            "label": "Father's Occupation",
                            "component": "Input",
                            "type": "text"
                          },
                          {
                            "name": "fatherEducationalLevel",
                            "label": "Father's Educational Level",
                            "component": "Input",
                            "type": "text"
                          },
                          {
                            "name": "motherName",
                            "label": "Mother's Name",
                            "component": "Input",
                            "type": "text"
                          },
                          {
                            "name": "motherOccupation",
                            "label": "Mother's Occupation",
                            "component": "Input",
                            "type": "text"
                          },
                          {
                            "name": "motherEducationalLevel",
                            "label": "Mother's Educational Level",
                            "component": "Input",
                            "type": "text"
                          },
                          {
                            "name": "parentLandlineNumber",
                            "label": "Parent's Landline Number",
                            "component": "Input",
                            "type": "tel"
                          },
                          {
                            "name": "parentMobileNumber",
                            "label": "Parent's Mobile Number",
                            "component": "Input",
                            "type": "tel"
                          },
                          {
                            "name": "parentEmail",
                            "label": "Parent's Email",
                            "component": "Input",
                            "type": "email"
